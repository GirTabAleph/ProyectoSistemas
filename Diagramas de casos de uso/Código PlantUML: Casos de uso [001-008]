@startuml
left to right direction

rectangle "Sistema de Asistencia" {
actor Alumno as alumno
actor Profesor as profesor

usecase "Lectura de NFC" as lecturaNFC
usecase "Registrar Asistencia" as registrarAsistencia
usecase "Alta de Alumno" as altaAlumno
usecase "Baja de Alumno" as bajaAlumno
usecase "Modificar Datos Alumno" as modificarAlumno
usecase "Alta de Grupo" as altaGrupo
usecase "Baja de Grupo" as bajaGrupo
usecase "Modificar Datos Grupo" as modificarGrupo
usecase "Exportar Informe" as exportarInforme

alumno --> lecturaNFC
profesor --> lecturaNFC
profesor --> registrarAsistencia
profesor --> altaAlumno
profesor --> bajaAlumno
profesor --> modificarAlumno
profesor --> altaGrupo
profesor --> bajaGrupo
profesor --> modificarGrupo
profesor --> exportarInforme

@enduml
