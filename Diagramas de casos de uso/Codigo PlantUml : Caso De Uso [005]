@startuml

rectangle ModificacionDeDatosDelAlumno {
    actor profesor
    actor "Sistema De Asistencia" as app
    

  usecase "Modificar Datos Del Alumno" as UC1
  usecase "Solicitar Datos del Alumno" as UC2
  usecase "Solicitar Tarjeta de Movilidad" as UC3

  profesor -- UC1
  UC1 ..> UC2 : Extend
  app --> UC2
  app ..> UC3 : Include
  
}

@enduml
