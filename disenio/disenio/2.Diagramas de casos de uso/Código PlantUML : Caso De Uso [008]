@startuml
left to right direction

rectangle CambioDeGrupo {
  actor Profesor
  actor "Sistema De Asistencia" as sistema

  usecase "Solicitar el numero de Grupo" as UC1
  usecase "Modifica el Grupo" as UC2
  usecase "Modificar asistencias" as UC3
  usecase "Eliminar asistencias" as UC4
  usecase "Modificar descripción del grupo" as UC5
  usecase "Eliminar descripción del grupo" as UC6

  Profesor -- UC2
  sistema ..> UC1 : Extend
  UC2 -- UC1
  UC1 -- UC3
  UC1 -- UC4
  UC1 -- UC5
  UC1 -- UC6


}
@enduml
