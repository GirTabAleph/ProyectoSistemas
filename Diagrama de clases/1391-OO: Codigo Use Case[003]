@startuml


rectangle "Registro de Alumno" {
  actor Profesor as Prof
  actor Alumno as Alum
  (Prof) --|> (Alum)
  (Prof) -- (system) : Accede al sistema
  (Prof) -- (system) : Registra a un alumno
  (system) -- (admin) : Valida información con\nadministración escolar
  (system) -- (mobile) : Solicita grupo y tarjeta de movilidad
  (system) -- (card) : Muestra datos del alumno y\nnúmero de movilidad
  (card) -- (reader) : Asocia datos del alumno a la tarjeta\ncon lector NFC
  (reader) -- (success) : Muestra mensaje de registro exitoso
  (success) -- (Prof) : Sale del sistema
  (admin) -- (error) : Muestra mensaje de error\n"Alumno no encontrado"
  (error) -- (system) : Reanuda en paso 3 del flujo principal
  (card) -- (error) : Muestra mensaje de\n"Alumno ya registrado"
  (error) --|> (USE CASE 5) : Redirecciona a Caso de Uso 5
  (5_Modificacion_de_Datos) -- (success) : Reanuda en paso 8 del flujo principal
  (card) -- (manual) : Muestra mensaje de no conexión\nlector NFC, solicita ingreso manual
  (manual) -- (success) : Reanuda en paso 8 del flujo principal
}

@enduml
